	eprint = {astro-ph/0011465},
	journal = {\apj},
	keywords = {ISM: Kinematics and Dynamics, Stars: Formation, Stars: Luminosity Function, Mass Function, Turbulence, Astrophysics},
	month = sep,
	number = {2},
	pages = {870-879},
	primaryclass = {astro-ph},
