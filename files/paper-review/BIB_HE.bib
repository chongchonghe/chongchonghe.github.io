	doi = {10.1093/mnras/stw1236},
	eprint = {1603.04557},
	journal = {Monthly Notices of the Royal Astronomical Society},
	month = {mar},
	pages = {3272--3283},
	title = {{What Physics Determines the Peak of the IMF? Insights from the Structure of Cores in Radiation-Magnetohydrodynamic Simulations}},
	url = {http://arxiv.org/abs/1603.04557 http://arxiv.org/abs/1603.04557},
	volume = {460},
	year = {2016},
	bdsk-url-1 = {http://arxiv.org/abs/1603.04557%20http://arxiv.org/abs/1603.04557},
