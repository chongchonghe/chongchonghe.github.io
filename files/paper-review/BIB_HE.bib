@article{Izotov2016a,
	abstract = {Following our first detection reported in Izotov et al., we present the         detection of Lyman continuum (LyC) radiation of four other         compact star-forming galaxies observed with the Cosmic Origins         Spectrograph (COS) onboard the Hubble Space Telescope. These         galaxies, at redshifts of z {\ensuremath{\sim}} 0.3, are         characterized by high emission-line flux ratios [O III]         {\ensuremath{\lambda}}5007/[O II] {\ensuremath{\lambda}}3727         {\ensuremath{\gtrsim}} 5. The escape fractions of the LyC         radiation f$_{esc}$(LyC) in these galaxies are in the range of         {\ensuremath{\sim}}6-13 per cent, the highest values found so         far in low-redshift star-forming galaxies. Narrow double-peaked         Ly {\ensuremath{\alpha}} emission lines are detected in the         spectra of all four galaxies, compatible with predictions for         LyC leakers. We find escape fractions of Ly         {\ensuremath{\alpha}}, f$_{esc}$(Ly {\ensuremath{\alpha}})         {\ensuremath{\sim}} 20-40 per cent, among the highest known for         Ly {\ensuremath{\alpha}} emitting galaxies. Surface brightness         profiles produced from the COS acquisition images reveal bright         star-forming regions in the centre and exponential discs in the         outskirts with disc scalelengths {\ensuremath{\alpha}} in the         range {\ensuremath{\sim}}0.6-1.4 kpc. Our galaxies are         characterized by low metallicity, {\ensuremath{\sim}}1/8-1/5         solar, low stellar mass {\ensuremath{\sim}}(0.2-4) {\texttimes}         {}10$^{9}$ M$_{☉}$, high star formation rates, SFR         {\ensuremath{\sim}} 14-36 M$_{☉}$ yr$^{-1}$, and high SFR         densities, {\ensuremath{\Sigma}} {\ensuremath{\sim}} 2-35         M$_{☉}$ yr$^{-1}$ kpc$^{-2}$. These properties are comparable to         those of high-redshift star-forming galaxies. Finally, our         observations, combined with our first detection reported in         Izotov et al., reveal that a selection for compact star-forming         galaxies showing high [O III] {\ensuremath{\lambda}}5007/[O II]         {\ensuremath{\lambda}}3727 ratios appears to pick up very         efficiently sources with escaping LyC radiation: all five of our         selected galaxies are LyC leakers.},
